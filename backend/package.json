{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=dev node dist/server.js",
    "dev": "NODE_ENV=dev sh -c 'tsc --watch & until [ -f dist/server.js ]; do sleep 0.2; done; sleep 1; nodemon'",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prisma:generate": "NODE_ENV=dev && prisma generate",
    "prisma:migrate:dev": "NODE_ENV=dev && prisma migrate dev",
    "prisma:migrate:deploy": "NODE_ENV=dev && prisma migrate deploy",
    "prisma:migrate:reset": "NODE_ENV=dev && prisma migrate reset --force",
    "prisma:migrate:status": "prisma migrate status --schema=./prisma/schema.prisma",
    "prisma:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm src/scripts/seed.ts"
  },
  "keywords": [],
  "author": "Nishant Maurya",
  "license": "ISC",
  "description": "Backend for Highwood Emissions Ingestion & Analytics Engine",
  "dependencies": {
    "@faker-js/faker": "10.3.0",
    "@prisma/adapter-pg": "7.4.0",
    "@prisma/client": "7.4.0",
    "dotenv": "17.3.1",
    "express": "5.2.1",
    "pg": "8.18.0",
    "socket.io": "4.8.3",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@types/express": "5.0.6",
    "@types/node": "25.2.3",
    "@types/pg": "8.16.0",
    "nodemon": "3.1.11",
    "prisma": "7.4.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  }
}
